---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iftikhar Khan - Personal Website">
  <main class="min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <h1 class="text-xl font-bold text-gray-900">Iftikhar Khan</h1>
          </div>
          <div class="flex items-center space-x-8">
            <a href="#about" class="text-gray-600 hover:text-gray-900 transition">About</a>
            <a href="#projects" class="text-gray-600 hover:text-gray-900 transition">Projects</a>
            <a href="#skills" class="text-gray-600 hover:text-gray-900 transition">Skills</a>
            <a href="#contact" class="text-gray-600 hover:text-gray-900 transition">Contact</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
            Hi, I'm <span class="text-blue-600">Iftikhar Khan</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            I'm a passionate developer and technology enthusiast. 
            Welcome to my personal space on the web where I share my journey and projects.
          </p>
          <div class="space-x-4">
            <a href="#projects" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition">
              View My Work
            </a>
            <a href="#contact" class="border border-blue-600 text-blue-600 px-6 py-3 rounded-lg hover:bg-blue-50 transition">
              Get In Touch
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">About Me</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            I'm a dedicated professional passionate about creating innovative solutions 
            and building meaningful digital experiences. With a strong foundation in 
            technology and a love for continuous learning, I strive to make a positive 
            impact through my work.
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">💻</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Development</h3>
            <p class="text-gray-600">Building modern web applications and digital experiences with cutting-edge technologies.</p>
          </div>
          
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">🎨</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Design</h3>
            <p class="text-gray-600">Creating beautiful and intuitive user interfaces that provide exceptional user experiences.</p>
          </div>
          
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">🚀</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Innovation</h3>
            <p class="text-gray-600">Always learning and exploring new technologies to solve complex problems.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Skills & Technologies</h2>
          <p class="text-lg text-gray-600">Technologies and tools I work with</p>
        </div>
        
        <div class="grid md:grid-cols-4 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">⚛️</div>
            <h3 class="font-semibold">React</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">📱</div>
            <h3 class="font-semibold">Node.js</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">🐍</div>
            <h3 class="font-semibold">Python</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">🗄️</div>
            <h3 class="font-semibold">Databases</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">☁️</div>
            <h3 class="font-semibold">Cloud</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">🛠️</div>
            <h3 class="font-semibold">DevOps</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">📊</div>
            <h3 class="font-semibold">Data Science</h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-3">🔐</div>
            <h3 class="font-semibold">Security</h3>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">My Projects</h2>
          <p class="text-lg text-gray-600">Here are some of the things I've been working on</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Project 1 -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
            <div class="h-48 bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
              <span class="text-white text-4xl">🌐</span>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Web Application</h3>
              <p class="text-gray-600 mb-4">A modern web application built with React and Node.js featuring real-time updates and responsive design.</p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">React</span>
                <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full">Node.js</span>
                <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-sm rounded-full">MongoDB</span>
              </div>
            </div>
          </div>
          
          <!-- Project 2 -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
            <div class="h-48 bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center">
              <span class="text-white text-4xl">📊</span>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Data Analytics Platform</h3>
              <p class="text-gray-600 mb-4">A comprehensive data analytics platform for visualizing and analyzing complex datasets with interactive dashboards.</p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded-full">Python</span>
                <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-sm rounded-full">Django</span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">D3.js</span>
              </div>
            </div>
          </div>
          
          <!-- Project 3 -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
            <div class="h-48 bg-gradient-to-br from-purple-400 to-purple-600 flex items-center justify-center">
              <span class="text-white text-4xl">📱</span>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Mobile App</h3>
              <p class="text-gray-600 mb-4">A cross-platform mobile application with offline capabilities and real-time synchronization.</p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-red-100 text-red-800 text-sm rounded-full">React Native</span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">TypeScript</span>
                <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full">Firebase</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-12">
          <a href="https://github.com/ikhan2010" class="bg-gray-900 text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition">
            View More on GitHub
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Get In Touch</h2>
          <p class="text-lg text-gray-600">Have a question or want to work together? I'd love to hear from you!</p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-8">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-semibold mb-4">Contact Information</h3>
              <div class="space-y-3">
                <p class="flex items-center">
                  <span class="w-6 text-blue-600">📧</span>
                  <span class="ml-3">iftikhar.khan@example.com</span>
                </p>
                <p class="flex items-center">
                  <span class="w-6 text-blue-600">📱</span>
                  <span class="ml-3">+1 (555) 123-4567</span>
                </p>
                <p class="flex items-center">
                  <span class="w-6 text-blue-600">📍</span>
                  <span class="ml-3">Your City, Country</span>
                </p>
              </div>
              
              <div class="mt-6">
                <h4 class="font-semibold mb-3">Follow Me</h4>
                <div class="flex space-x-4">
                  <a href="https://www.linkedin.com/in/ikhan-connect" class="text-blue-600 hover:text-blue-800 transition">LinkedIn</a>
                  <a href="https://github.com/ikhan2010" class="text-gray-800 hover:text-gray-600 transition">GitHub</a>
                  <a href="https://x.com/ifty_k" class="text-blue-400 hover:text-blue-600 transition">Twitter</a>
                </div>
              </div>
            </div>
            
            <div>
              <form class="space-y-4" netlify>
                <div>
                  <label for="name" class="block text-sm font-medium mb-1">Name</label>
                  <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium mb-1">Email</label>
                  <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <div>
                  <label for="message" class="block text-sm font-medium mb-1">Message</label>
                  <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition">
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-8">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p>&copy; 2025 Iftikhar Khan. All rights reserved.</p>
        <p class="mt-2 text-gray-400">Built with ❤️ using Astro and Tailwind CSS</p>
      </div>
    </footer>
  </main>
</Layout>